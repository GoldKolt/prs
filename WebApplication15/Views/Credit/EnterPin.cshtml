@model WebApplication15.Models.Card

@{
    ViewData["Title"] = "EnterPin";
}

<h2>Enter pin code, please</h2>

<div>
    <form asp-action="CheckPin" asp-route-attempts="@ViewBag.Attempts" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Number" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Pin" class="control-label"></label>
            <input asp-for="Pin" class="form-control" />
            <span asp-validation-for="Pin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-default" />
        </div>
    </form>
</div>
