@model int
@{
    ViewData["Title"] = "GetMoney";
}

<h2>GetMoney</h2>

<form asp-action="GetMoney" asp-route-id="@Model">
    <div class="form-group">
        <input type="number" min="1" max="1000" name="amount" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>